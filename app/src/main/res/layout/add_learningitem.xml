<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iss.ft03se.photolearn.AddLearningItemActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/right"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:gravity="left"
                android:background="@drawable/right"
                android:textSize="17dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/title_LS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="20180201-IOT-M01"
                android:textColor="@android:color/holo_green_light"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/right2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:gravity="left"
                android:background="@drawable/right"
                android:textSize="17dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_Q"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Programming languages for the IoT"
                android:textColor="@android:color/holo_green_light"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/selectimgbtn"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@mipmap/green_btn"
                android:text="Select"
                android:onClick="selectImage"/>
            <Button
                android:id="@+id/uploadimgbtn"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Upload"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/green_btn"
                android:onClick="uploadImage"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Description:"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/xh_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Type content"
                android:inputType="textMultiLine"
                android:maxLines="15"
                android:minLines="8"
                android:paddingLeft="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <Button
                android:id="@+id/bt_Add"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:background="@mipmap/green_btn"
                android:text="Add"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>