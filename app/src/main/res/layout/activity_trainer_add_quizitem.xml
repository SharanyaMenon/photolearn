<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.toshimishra.photolearn.TrainerAddQuizItem">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/right"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:gravity="left"
                android:background="@drawable/right"
                android:textSize="17dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_LS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="20180201-IOT-M01"
                android:textColor="@android:color/holo_green_light"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/right2"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:gravity="left"
                android:background="@drawable/right"
                android:textSize="17dp"
                android:layout_marginTop="4dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/title_Q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Quiz For IOT"
                android:textColor="@android:color/holo_green_light"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/selectimgbtn"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Select"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/green_btn"
                android:onClick="selectImage"/>
            <Button
                android:id="@+id/uploadimgbtn"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/green_btn"
                android:text="Upload"
                android:onClick="uploadImage"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Question:"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/xh_txt"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:hint="Type Question"
                android:paddingLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="17dp" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Options:"
                android:textColor="@android:color/black"
                android:textSize="20dp" />


        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

             <TextView
                 android:id="@+id/textView8"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:width="40dp"
                 android:gravity="center"
                 android:paddingLeft="10dp"
                 android:text="A."
                 android:textColor="@android:color/black"
                 android:textSize="20dp" />

             <TextView
                 android:id="@+id/textView9"
                 android:layout_width="wrap_content"
                 android:layout_height="42dp"
                 android:width="40dp"
                 android:gravity="center"
                 android:paddingLeft="10dp"
                 android:text="B."
                 android:textColor="@android:color/black"
                 android:textSize="20dp" />

             <TextView
                 android:id="@+id/textView10"
                 android:layout_width="wrap_content"
                 android:layout_height="44dp"
                 android:width="40dp"
                 android:gravity="center"
                 android:paddingLeft="10dp"
                 android:text="C."
                 android:textColor="@android:color/black"
                 android:textSize="20dp" />

             <TextView
                 android:id="@+id/textView11"
                 android:layout_width="wrap_content"
                 android:layout_height="46dp"
                 android:width="40dp"
                 android:gravity="center"
                 android:paddingLeft="10dp"
                 android:text="D."
                 android:textColor="@android:color/black"
                 android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Opt1"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:hint="Input option A"
                android:paddingLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/Opt2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="Input option B"
                android:paddingLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/Opt3"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="Input option C"
                android:paddingLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/Opt4"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="Input option D"
                android:paddingLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Correct "
                android:buttonTint="@android:color/black"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:buttonTint="@android:color/black"
                android:text="Correct "
                android:textSize="17dp" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Correct "
                android:buttonTint="@android:color/black"
                android:textSize="17dp" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="120dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Correct "
                android:buttonTint="@android:color/black"
                android:textSize="17dp" />
            </RadioGroup>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Explanation : "
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Explanation"
                android:paddingLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/bt_Add"
                android:layout_width="116dp"
                android:layout_height="40dp"
                android:background="@mipmap/green_btn"
                android:text="Add"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>